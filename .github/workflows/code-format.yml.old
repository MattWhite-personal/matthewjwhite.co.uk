name: code-formatter

on:
  pull_request:
    types: [opened, edited, reopened, synchronize]

permissions:
  contents: write
  pull-requests: write

jobs:
  format-code:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
      - uses: ministryofjustice/github-actions/code-formatter@v18.6.0
        with:
          ignore-files: ""
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
